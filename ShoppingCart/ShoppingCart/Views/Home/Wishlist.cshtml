@{
	ViewData["Title"] = "List Wishlist";
	int key = 1;
}
<h3>List Wishlist</h3>
<table class="table" id="mytable">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">Product Image</th>
			<th scope="col">Product Name</th>
			<th scope="col">Product Description</th>
			<th scope="col">Product Price</th>
			<th scope="col">Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var wishlist_product in Model)
		{
			<tr>
				<th scope="row">@key</th>
				<td><img src="~/media/products/@wishlist_product.Product.Image" width="120px" height="150px" /></td>
				<td>@wishlist_product.Product.Name</td>
				<td>@Html.Raw(@wishlist_product.Product.Description)/td>
				<td>@wishlist_product.Product.Price.ToString("#,##0 VNĐ")</td>
				<td>
					<a class="btn btn-danger btn-sm confirmDeletion" asp-controller="Home" asp-action="DeleteWishlist" asp-route-Id="@wishlist_product.Compare.Id">Delete</a>
				</td>
			</tr>
			key++;
		}

	</tbody>
</table>