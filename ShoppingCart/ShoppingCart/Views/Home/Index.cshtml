@model IEnumerable<ProductModel>
@await Html.PartialAsync("_SliderPartial")
<div class="col-sm-3">
    @await Html.PartialAsync("_SideBarPartial")
</div>

<style>
    .product-image-wrapper {
        height: 450px;
    }
</style>
<div class="col-sm-9 padding-right">
    <div class="features_items">
        <!--features_items-->
        <h2 class="title text-center">Features Items</h2>
        @if (Model is not null && Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="col-sm-4">
                    <div class="product-image-wrapper">
                        <div class="single-products">
                            <div class="productinfo text-center">
                                <a asp-action="Detail" asp-controller="Product" asp-route-Id="@item.Id">
                                    <img src="~/media/products/@item.Image" alt="@item.Name" width="100px" height="200px" />
                                    <h2>@item.Price.ToString("#,##0 VNĐ")</h2>
                                    <p>@item.Name</p>
                                    <p>Danh mục: @item.Category.Name</p>
                                    <p>Thương hiệu: @item.Brand.Name</p>
                                </a>
                                <button class="btn btn-default add-to-cart" data-product_id="@item.Id"><i class="fa fa-shopping-cart"></i>Add to cart</button>
                            </div>
                        </div>

                        <div class="choose">
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <ul class="nav nav-pills nav-justified">
                                    <li style="text-align: center"><button class="btn btn-default add-btn-wishlist" data-product1="@item.Id"><i class="fa fa-plus-square"></i> Yêu thích</button></li>
                                    <li style="text-align: center"><button class="btn btn-default add-btn-compare" data-product2="@item.Id"><i class="fa fa-plus-square"></i> So sánh</button></li>
                                </ul>
                            }

                        </div>
                    </div>
                </div>
            }
        }
    </div><!--features_items-->

</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.add-to-cart').click(function (e) {
                e.preventDefault();
                var productId = $(this).data('product_id');
                alert(productId);
                $.ajax({
                    url: '@Url.Action("Add", "Cart")',
                    type: 'POST',
                    data: { Id: productId, quantity: 1 },
                    success: function (result) {
                        if (result.success) {
                            Swal.fire("Thêm vào giỏ hàng thành công.");
                        }
                    },
                    error: function (xhr, status, error) {
                        alert('Error adding product to cart.');
                    }
                });
            });
        });
    </script>

    <!-- WishList-->
    <script>
        $(document).ready(function () {
            $('.add-btn-wishlist').click(function (e) {
                e.preventDefault();
                var productId = $(this).data('product1');
                alert(productId);
                $.ajax({
                    url: '@Url.Action("AddWishList", "Home")',
                    type: 'POST',
                    data: { Id: productId },
                    success: function (result) {
                        if (result.success) {
                            Swal.fire("Thêm vào yêu thích thành công.");
                        }
                    },
                    error: function (xhr, status, error) {
                        alert('Error adding product to wishlist.');
                    }
                });
            });
        });
    </script>

    <!-- Compare-->
    <script>
        $(document).ready(function () {
            $('.add-btn-compare').click(function (e) {
                e.preventDefault();
                var productId = $(this).data('product2');
                alert(productId);
                $.ajax({
                    url: '@Url.Action("AddCompare", "Home")',
                    type: 'POST',
                    data: { Id: productId },
                    success: function (result) {
                        if (result.success) {
                            Swal.fire("Thêm vào so sánh thành công.");
                        }
                    },
                    error: function (xhr, status, error) {
                        alert('Error adding product to wishlist.');
                    }
                });
            });
        });
    </script>
}