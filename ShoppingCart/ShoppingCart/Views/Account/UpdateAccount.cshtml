@model AppUserModel
@{
    ViewData["Title"] = "Update Account Information";
}

<h3>Update Account Information</h3>
<!--form-->
<div class="container">
    <div class="row">
        <div class="col-sm-8">
            <div class="signup-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form asp-controller="Account" asp-action="UpdateInforAccount" method="post">
                    <input type="hidden" asp-for="Id"/>
                    <div class="form-group">
                        <label>Username</label>
                        <input asp-for="UserName" readonly class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger" />
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        <input asp-for="Email" readonly class="form-control" />
                        <span asp-validation-for="Email" class="text-danger" />
                    </div>

                    <div class="form-group">
                        <label>Phone</label>
                        <input asp-for="PhoneNumber" required class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger" />
                    </div>

                    <div class="form-group">
                        <label>Password</label>
                        <input asp-for="PasswordHash" type="password" class="form-control" />
                        <span asp-validation-for="PasswordHash" class="text-danger" />
                    </div>

                    <button class="btn btn-default">Update</button>
                </form>
            </div><!--/sign up form-->
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}