@model AppUserModel
@{
    ViewData["Title"] = "New Password";
}

<section id="">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-sm-offset-1">
                <div class="login-form">
                    <!--login form-->
                    <h2>Reset Password</h2>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <form asp-controller="Account" asp-action="UpdateNewPassword">
                        <input type="hidden" name="token" value="@ViewBag.Token"/>
                        <div class="form-group">
                            <label>Email</label>
                            <input asp-for="Email" readonly value="@ViewBag.Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger" />
                        </div>

                        <div class="form-group">
                            <label>Password</label>
                            <input asp-for="PasswordHash" class="form-control" />
                            <span asp-validation-for="PasswordHash" class="text-danger" />
                        </div>

                        <button class="btn btn-default">Gửi</button>
                    </form>
                </div><!--/login form-->
            </div>
        </div>
    </div>
</section><!--/form-->
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}