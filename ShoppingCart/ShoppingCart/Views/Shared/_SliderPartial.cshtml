@{
    int index = 0;
    int indexSlider = 0;
}
<style>
    .carousel-inner{
    width: 100%;
    max-height: 400px !important;
    }
</style>
@if (ViewBag.Slider is not null && ViewBag.Slider.Count > 0)
{
    <section id="slider">
        <!--slider-->
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            @foreach (var slider in ViewBag.Slider)
                            {
                                <li data-target="#slider-carousel" data-slide-to="index1" class="@(indexSlider == 0 ? "active" : "")"></li>
                                indexSlider++;
                            }
                        </ol>

                        <div class="carousel-inner">

                            @foreach (var slider in ViewBag.Slider)
                            {
                                <div class="item @(index == 0 ? "active" : "")">
                                    <div class="col-sm-12">
                                        <img src="~/media/sliders/@slider.Image" class="girl img-responsive"/>
                                    </div>
                                </div>
                                index++;
                            }

                        </div>

                        <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                            <i class="fa fa-angle-left"></i>
                        </a>
                        <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                            <i class="fa fa-angle-right"></i>
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </section><!--/slider-->
}