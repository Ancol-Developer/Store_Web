@model IEnumerable<CategoryModel>
@{
    ViewData["Title"] = "Category List";
}
<h3>List Category</h3>
<a class="btn btn-success btn-sm" asp-controller="Category" asp-action="Create" asp-area="Admin">Add Category</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Category Name</th>
            <th scope="col">Category Description</th>
            <th scope="col">Category Slug</th>
            <th scope="col">Category Status</th>
            <th scope="col">Category Manage</th>
        </tr>
    </thead>
    <tbody>
        @if (Model is not null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@Html.Raw(@item.Description)</td>
                    <td>@item.Slug</td>
                    <td>
                        @if(item.Status == 1){
                            <span class="text text-success">Hiển thị</span>
                        }
                        else
                        {
                            <span class="text text-success">Ẩn</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-controller="Category" asp-action="Edit" asp-area="Admin" asp-route-Id="@item.Id">Edit</a>
                        <a class="btn btn-danger btn-sm" asp-controller="Category" asp-action="Delete" asp-area="Admin" asp-route-Id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>