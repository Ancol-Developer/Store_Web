@model ContactModel
@{
	ViewData["Title"] = "Edit Contact";
}
<h4>Edit Contact</h4>
<div class="col-md-9">
	<form asp-action="Edit" method="Post" enctype="multipart/form-data">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group">
			<label>Name</label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger" />
		</div>

		<div class="form-group">
			<label>Desciption</label>
			<textarea asp-for="Description" class="form-control"></textarea>
			<span asp-validation-for="Description" class="text-danger" />
		</div>

		<div class="form-group">
			<label>Map</label>
			<textarea asp-for="Map" class="form-control"></textarea>
			<span asp-validation-for="Map" class="text-danger" />
		</div>

		<div class="form-group">
			<label>Email</label>
			<textarea asp-for="Email" class="form-control"></textarea>
			<span asp-validation-for="Email" class="text-danger" />
		</div>

		<div class="form-group">
			<label>Phone</label>
			<textarea asp-for="Phone" class="form-control"></textarea>
			<span asp-validation-for="Phone" class="text-danger" />
		</div>

		<div class="form-group">
			<label>Image</label>
			<input asp-for="ImageUpload" class="form-control" />
			<span asp-validation-for="ImageUpload" class="text-danger" />
			<img src="~/media/products/@Model.LogoImage" width="120px" />
		</div>

		<div class="form-group">
			<button class="btn btn-primary">Update</button>
		</div>
	</form>
	<a asp-action="Index">Back to List Product</a>
</div>
@section Scripts {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
	<script src="https://cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>
	<script>
		CKEDITOR.replace('Description');
	</script>
}
