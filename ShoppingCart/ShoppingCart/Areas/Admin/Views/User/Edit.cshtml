@model AppUserModel
@{
	ViewData["Title"] = "Edit User";
}
<h4>Edit User</h4>
<div class="col-md-9">
	<form asp-action="Edit" method="Post" enctype="multipart/form-data">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group">
			<label>Name</label>
			<input asp-for="UserName" required class="form-control" />
			<span asp-validation-for="UserName" class="text-danger" />
		</div>

		<div class="form-group">
			<label>Email</label>
			<textarea asp-for="Email" required class="form-control"></textarea>
			<span asp-validation-for="Email" class="text-danger" />
		</div>

		<div class="form-group">
			<label>Phone number</label>
			<textarea asp-for="PhoneNumber" required class="form-control"></textarea>
			<span asp-validation-for="PhoneNumber" class="text-danger" />
		</div>

		<div class="form-group">
			<label>Password</label>
			<textarea asp-for="PasswordHash" readonly required class="form-control"></textarea>
			<span asp-validation-for="PasswordHash" class="text-danger" />
		</div>

		<div class="form-group">
			<label>Roles</label>
			<select asp-for="RoleId" class="form-control" asp-items="ViewBag.Roles">
				<option>-- Choose a Roles --</option>
			</select>
			<span asp-validation-for="RoleId" class="text-danger" />
		</div>

		<div class="form-group">
			<button class="btn btn-primary">Update</button>
		</div>
	</form>
	<a asp-action="Index">Back to List User</a>
</div>
@section Scripts {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
