@{
    ViewData["Title"] = "User List";
}
<h3>List Brand</h3>
<a class="btn btn-success btn-sm" asp-controller="User" asp-action="Create" asp-area="Admin">Add User</a>
<table class="table" id="mytable">
    <thead>
        <tr>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Mange</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model is not null)
        {
            foreach (var userWidthRole in Model)
            {
                <tr>
                    <td>@userWidthRole.User.UserName</td>
                    <td>@userWidthRole.User.Email</td>
                    <td>@userWidthRole.User.PhoneNumber</td>
                    <td>@userWidthRole.RoleName</td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-controller="User" asp-action="Edit" asp-area="Admin" asp-route-Id="@userWidthRole.User.Id">Edit</a>
                        <a class="btn btn-danger btn-sm confirmDeletion" asp-controller="User" asp-action="Delete" asp-area="Admin" asp-route-Id="@userWidthRole.User.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>